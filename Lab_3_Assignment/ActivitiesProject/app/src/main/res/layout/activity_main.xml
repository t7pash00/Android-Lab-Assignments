<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/open_map"
        android:layout_width="423dp"
        android:layout_height="0dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="171dp"
        android:onClick="openMap"
        android:text="Open Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_call"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="155dp"
        android:onClick="createCall"
        android:text="Create Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_map" />

    <EditText
        android:id="@+id/oamkUrl"
        android:layout_width="228dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:text="https://www.oamk.fi"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        app:layout_constraintEnd_toStartOf="@+id/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_call" />

    <Button
        android:id="@+id/go"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:onClick="goOamk"
        android:text="Go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_call" />

</android.support.constraint.ConstraintLayout>